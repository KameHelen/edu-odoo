<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de Lista para Profesor Académico -->
        <record id="profesor_academico_list" model="ir.ui.view">
            <field name="name">profesor.academico.list</field>
            <field name="model">profesor.academico</field>
            <field name="arch" type="xml">
                <list>
                    <field name="nombre"/>
                    <field name="titulacion"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario para Profesor Académico -->
        <record id="profesor_academico_form" model="ir.ui.view">
            <field name="name">profesor.academico.form</field>
            <field name="model">profesor.academico</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="titulacion"/>
                        </group>
                        <separator string="Cursos"/>
                        <field name="curso_ids"/>
                        <separator string="Grupos de Clase"/>
                        <field name="grupo_clase_ids"/>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Vista Kanban para Profesor Académico -->
        <record id="profesor_academico_kanban" model="ir.ui.view">
            <field name="name">profesor.academico.kanban</field>
            <field name="model">profesor.academico</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="nombre"/>
                    <field name="titulacion"/>
                    <templates>
                        <t t-name="card">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="nombre"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <span><field name="titulacion"/></span>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
