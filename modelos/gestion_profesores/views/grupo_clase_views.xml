<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de Lista para Grupo de Clase -->
        <record id="grupo_clase_list" model="ir.ui.view">
            <field name="name">grupo.clase.list</field>
            <field name="model">grupo.clase</field>
            <field name="arch" type="xml">
                <list>
                    <field name="nombre"/>
                    <field name="horario"/>
                    <field name="profesor_id"/>
                    <field name="sesion_id"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario para Grupo de Clase -->
        <record id="grupo_clase_form" model="ir.ui.view">
            <field name="name">grupo.clase.form</field>
            <field name="model">grupo.clase</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="horario"/>
                            <field name="profesor_id"/>
                            <field name="sesion_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Vista Kanban para Grupo de Clase -->
        <record id="grupo_clase_kanban" model="ir.ui.view">
            <field name="name">grupo.clase.kanban</field>
            <field name="model">grupo.clase</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="profesor_id">
                    <field name="nombre"/>
                    <field name="horario"/>
                    <field name="profesor_id"/>
                    <field name="sesion_id"/>
                    <templates>
                        <t t-name="card">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="nombre"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><i class="fa fa-clock-o"/> <field name="horario"/></div>
                                <div class="text-muted small">
                                    <field name="sesion_id"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
