<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de Lista para Curso Académico -->
        <record id="curso_academico_list" model="ir.ui.view">
            <field name="name">curso.academico.list</field>
            <field name="model">curso.academico</field>
            <field name="arch" type="xml">
                <list>
                    <field name="titulo"/>
                    <field name="nivel"/>
                    <field name="precio"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario para Curso Académico -->
        <record id="curso_academico_form" model="ir.ui.view">
            <field name="name">curso.academico.form</field>
            <field name="model">curso.academico</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="titulo"/>
                            <field name="nivel"/>
                            <field name="precio"/>
                        </group>
                        <group>
                            <field name="descripcion"/>
                        </group>
                        <separator string="Sesiones"/>
                        <field name="sesion_ids"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Calendario para Curso Académico -->
        <record id="curso_academico_calendar" model="ir.ui.view">
            <field name="name">curso.academico.calendar</field>
            <field name="model">curso.academico</field>
            <field name="arch" type="xml">
                <calendar string="Cursos Académicos" date_start="fecha_inicio" color="nivel">
                    <field name="titulo"/>
                    <field name="nivel"/>
                </calendar>
            </field>
        </record>

        <!-- Vista Kanban para Curso Académico -->
        <record id="curso_academico_kanban" model="ir.ui.view">
            <field name="name">curso.academico.kanban</field>
            <field name="model">curso.academico</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="nivel">
                    <field name="titulo"/>
                    <field name="nivel"/>
                    <field name="precio"/>
                    <field name="fecha_inicio"/>
                    <templates>
                        <t t-name="card">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="titulo"/>
                                    </strong>
                                </div>
                                <span class="badge badge-pill badge-primary">
                                    <field name="nivel"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <p>Precio: <field name="precio"/></p>
                                <p>Inicio: <field name="fecha_inicio"/></p>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
