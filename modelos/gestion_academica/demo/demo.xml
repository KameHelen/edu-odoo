<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cursos -->
        <record id="curso_python" model="curso.academico">
            <field name="titulo">Curso de Python Avanzado</field>
            <field name="descripcion">Aprende Python desde cero hasta nivel experto, incluyendo frameworks web y análisis de datos.</field>
            <field name="nivel">b2</field>
            <field name="precio">150.0</field>
        </record>

        <record id="curso_odoo" model="curso.academico">
            <field name="titulo">Curso de Odoo Funcional</field>
            <field name="descripcion">Gestión empresarial con Odoo 19: Ventas, Compras, Inventario y Contabilidad.</field>
            <field name="nivel">c1</field>
            <field name="precio">200.0</field>
        </record>

        <!-- Sesiones -->
        <record id="sesion_python_1" model="sesion.academica">
            <field name="curso_id" ref="curso_python"/>
