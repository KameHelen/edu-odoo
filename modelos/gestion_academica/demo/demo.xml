            <field name="numero_asientos">20</field>
            <field name="numero_alumnos">0</field>
        </record>

        <record id="sesion_odoo_1" model="sesion.academica">
            <field name="curso_id" ref="curso_odoo"/>
            <field name="fecha_inicio" eval="(DateTime.now() + relativedelta(days=2)).strftime('%Y-%m-%d 09:00:00')"/>
