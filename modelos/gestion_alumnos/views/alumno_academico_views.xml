<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de Lista para Alumno Académico -->
        <record id="alumno_academico_list" model="ir.ui.view">
            <field name="name">alumno.academico.list</field>
            <field name="model">alumno.academico</field>
            <field name="arch" type="xml">
                <list>
                    <field name="nombre"/>
                    <field name="apellidos"/>
                    <field name="email"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario para Alumno Académico -->
        <record id="alumno_academico_form" model="ir.ui.view">
            <field name="name">alumno.academico.form</field>
            <field name="model">alumno.academico</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="apellidos"/>
                            <field name="email"/>
                        </group>
                        <separator string="Matrículas"/>
                        <field name="matricula_ids"/>
                        <separator string="Facturas"/>
                        <field name="factura_ids"/>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Vista Kanban para Alumno Académico -->
        <record id="alumno_academico_kanban" model="ir.ui.view">
            <field name="name">alumno.academico.kanban</field>
            <field name="model">alumno.academico</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="nombre"/>
                    <field name="apellidos"/>
                    <field name="email"/>
                    <templates>
                        <t t-name="card">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="nombre"/> <field name="apellidos"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <t t-if="record.email.raw_value">
                                    <span><field name="email"/></span>
                                </t>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
